[client]
port = 3308
socket = /data/ane56_3308/mysqld.sock

[mysqld]
server_id = 343308
port = 3308
log_bin_trust_function_creators = 1
sql_mode = NO_ENGINE_SUBSTITUTION,STRICT_TRANS_TABLES
#read_only = 1

# GENERAL #
user = mysql
default-storage-engine = InnoDB
socket = /data/ane56_3308/mysqld.sock
pid-file = /data/ane56_3308/mysql.pid

# LOGGING #
log_output=file
datadir = /data/ane56_3308
#general_log_file = /data/ane56_3308/mysql_general.log
log_error = /data/ane56_3308/mysql_error.log
#log_queries_not_using_indexes = 1
slow_query_log = ON
long_query_time = 0
innodb_monitor_enable=all
performance_schema=ON
log_slow_admin_statements = ON
log_slow_slave_statements = ON

# MyISAM #
key_buffer_size = 32M
join_buffer_size = 16M
sort_buffer_size = 32M
read_rnd_buffer_size = 32M
read_buffer_size=32M

# SAFETY #
max_allowed_packet = 164M
max_connect_errors = 1000000
wait_timeout = 600
interactive_timeout = 600
lower_case_table_names = 1

# BINARY LOGGING #
log_bin = /data/binlog_3308/mysql_bin
relay_log = /data/binlog_3308/mysql-relay-bin
expire_logs_days = 7
sync_binlog = 2
log_slave_updates
binlog_format = ROW
#binlog_ignore_db = mysql,information_schema
slave_parallel_workers = 8
slave_parallel_type = LOGICAL_CLOCK
slave_preserve_commit_order = 1
gtid_mode = ON
enforce_gtid_consistency = 1
master_info_repository = TABLE
relay_log_info_repository = TABLE
relay_log_recovery=ON
log_slave_updates=ON

# CACHES AND LIMITS #
tmp_table_size = 64M
max_heap_table_size = 32M
query_cache_type = 0
query_cache_size = 0
max_connections = 5000
open_files_limit = 65535
table_definition_cache = 4096
table_open_cache = 3000

# INNODB #
innodb_flush_method = O_DIRECT
innodb_log_files_in_group = 3
innodb_log_file_size = 16G
innodb_log_buffer_size = 32M 
innodb_file_per_table = 1
innodb_flush_log_at_trx_commit = 1 
innodb_buffer_pool_size = 90G 
innodb_read_io_threads = 8
innodb_write_io_threads = 8 
innodb_io_capacity = 4000
innodb_buffer_pool_instances = 12
innodb_purge_threads=4
innodb_undo_log_truncate = 1

# CHARACTER #
character_set_server = utf8
collation_server = utf8_general_ci
explicit_defaults_for_timestamp = true
